---
import ImputadoCardLarge from '../ui/ImputadoCardLarge.astro';

interface Person {
  initials: string;
  name: string;
  role: string;
  pena: string;
  penaLabel: string;
  delitosLabel: string;
  delitos: string;
  datoLabel: string;
  dato: string;
}

interface Props {
  title: string;
  abalos: Person;
  koldo: Person;
}

const { title, abalos, koldo } = Astro.props;
---

<section
  class="bg-trama-red px-6 py-6 lg:px-14 lg:py-14 w-full"
  data-imputados-section
>
  <!-- Section Header -->
  <div class="flex items-center gap-4 mb-8" data-imputados-section-title>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-white"
    >
      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
    </svg>
    <span class="text-white text-sm font-bold tracking-widest">
      {title}
    </span>
  </div>

  <!-- Cards Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <ImputadoCardLarge
      initials={abalos.initials}
      name={abalos.name}
      role={abalos.role}
      pena={abalos.pena}
      penaLabel={abalos.penaLabel}
      delitosLabel={abalos.delitosLabel}
      delitos={abalos.delitos}
      datoLabel={abalos.datoLabel}
      dato={abalos.dato}
      variant="dark"
    />
    <ImputadoCardLarge
      initials={koldo.initials}
      name={koldo.name}
      role={koldo.role}
      pena={koldo.pena}
      penaLabel={koldo.penaLabel}
      delitosLabel={koldo.delitosLabel}
      delitos={koldo.delitos}
      datoLabel={koldo.datoLabel}
      dato={koldo.dato}
      variant="dark-alt"
    />
  </div>
</section>

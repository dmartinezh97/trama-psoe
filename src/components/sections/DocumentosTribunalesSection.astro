---
import TribunalCard from '../ui/TribunalCard.astro';

interface Tribunal {
  icon: string;
  name: string;
  description: string;
}

interface Props {
  title: string;
  tribunales: Tribunal[];
}

const { title, tribunales } = Astro.props;

const sectionIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" x2="21" y1="22" y2="22"/><line x1="6" x2="6" y1="18" y2="11"/><line x1="10" x2="10" y1="18" y2="11"/><line x1="14" x2="14" y1="18" y2="11"/><line x1="18" x2="18" y1="18" y2="11"/><polygon points="12 2 20 7 4 7"/></svg>`;
---

<section
  class="bg-trama-950 px-14 py-20 w-full"
  data-documentos-section
>
  <div class="flex flex-col gap-10">
    <!-- Section Header -->
    <div class="flex items-center gap-4" data-documentos-section-title>
      <div class="text-trama-red" set:html={sectionIcon} />
      <h2 class="text-trama-500 font-secondary text-sm font-bold tracking-[2px] uppercase">{title}</h2>
    </div>

    <!-- Tribunales List -->
    <div class="flex flex-col gap-4">
      {tribunales.map((tribunal) => (
        <TribunalCard
          icon={tribunal.icon}
          name={tribunal.name}
          description={tribunal.description}
        />
      ))}
    </div>
  </div>
</section>

---
import DocumentSourceCard from '../ui/DocumentSourceCard.astro';

interface Source {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  sources: Source[];
}

const { title, sources } = Astro.props;

const sectionIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8"/><path d="M16 13H8"/><path d="M16 17H8"/></svg>`;
---

<section
  class="bg-trama-50 px-5 md:px-14 py-8 md:py-20 w-full"
  data-documentos-section
>
  <div class="flex flex-col gap-6 md:gap-10">
    <!-- Section Header -->
    <div class="flex items-center gap-4" data-documentos-section-title>
      <div class="text-trama-red" set:html={sectionIcon} />
      <h2 class="text-trama-500 font-secondary text-sm font-bold tracking-[2px] uppercase">{title}</h2>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
      {sources.map((source) => (
        <DocumentSourceCard
          icon={source.icon}
          title={source.title}
          description={source.description}
        />
      ))}
    </div>
  </div>
</section>

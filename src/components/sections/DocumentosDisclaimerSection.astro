---
interface Props {
  title: string;
  text: string;
  date: string;
}

const { title, text, date } = Astro.props;

const infoIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>`;
---

<section
  class="bg-white px-5 md:px-14 py-10 md:py-20 w-full"
  data-documentos-section
>
  <div class="flex flex-col items-center gap-5 md:gap-6 text-center max-w-[700px] mx-auto">
    <!-- Icon -->
    <div class="text-trama-red" set:html={infoIcon} data-documentos-hero-item />

    <!-- Title -->
    <h2
      class="text-trama-950 font-secondary text-[24px] md:text-[32px] font-black"
      data-documentos-hero-item
    >
      {title}
    </h2>

    <!-- Text -->
    <p
      class="text-trama-600 text-sm md:text-base leading-relaxed"
      data-documentos-hero-item
    >
      {text}
    </p>

    <!-- Date -->
    <p
      class="text-trama-red font-semibold text-sm"
      data-documentos-hero-item
    >
      {date}
    </p>
  </div>
</section>

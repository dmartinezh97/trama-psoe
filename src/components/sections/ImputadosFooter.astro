---
import ButtonOutline from '../ui/ButtonOutline.astro';

interface Link {
  text: string;
  href: string;
}

interface Props {
  disclaimer: string;
  links: Link[];
}

const { disclaimer, links } = Astro.props;
---

<section
  class="bg-trama-red px-6 py-6 lg:px-14 lg:py-14 w-full flex flex-col items-center gap-6"
  data-imputados-footer
>
  <!-- Disclaimer -->
  <p
    class="text-trama-red-light text-sm font-medium text-center"
    data-imputados-footer-item
  >
    {disclaimer}
  </p>

  <!-- Links -->
  <div class="flex flex-col lg:flex-row items-center gap-6 w-full lg:w-auto" data-imputados-footer-item>
    {links.map((link) => (
      <ButtonOutline href={link.href} variant="white" class="w-full lg:w-auto">
        {link.text}
      </ButtonOutline>
    ))}
  </div>
</section>

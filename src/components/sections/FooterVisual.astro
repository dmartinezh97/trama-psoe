---
import { getLocaleFromUrl, useTranslations } from '../../i18n/utils';
import type { Locale } from '../../i18n/translations';

const locale = getLocaleFromUrl(Astro.url) as Locale;
const t = useTranslations(locale);
---

<footer data-footer class="relative h-auto lg:h-[400px] bg-trama-red overflow-hidden">
  <!-- Background Text -->
  <span class="absolute left-[-50px] bottom-[-80px] font-secondary text-[150px] md:text-[200px] lg:text-[250px] font-black text-trama-red-dark select-none pointer-events-none tracking-[-10px]">
    LA TRAMA
  </span>

  <!-- Footer Content -->
  <div class="relative z-10 flex flex-col lg:flex-row lg:justify-between px-8 md:px-14 py-12 lg:py-14">
    <!-- Left Column -->
    <div data-footer-content class="flex flex-col gap-6 max-w-[500px]">
      <!-- Logo -->
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-white flex items-center justify-center">
          <span class="font-secondary text-2xl font-black text-trama-red">T</span>
        </div>
        <span class="font-secondary text-2xl font-black tracking-[-1px] text-white">
          {t.footer.brand}
        </span>
      </div>

      <!-- Description -->
      <p class="font-secondary text-sm font-normal leading-relaxed text-trama-red-light">
        {t.footer.description}
      </p>

      <!-- Disclaimer -->
      <div class="bg-black px-5 py-3 inline-block">
        <span class="font-secondary text-xs font-semibold tracking-[0.5px] text-white">
          {t.footer.disclaimer}
        </span>
      </div>
    </div>

    <!-- Right Column - Navigation -->
    <nav data-footer-content class="flex gap-16 mt-8 lg:mt-0">
      <!-- Cases Column -->
      <div class="flex flex-col gap-4">
        <span class="font-secondary text-xs font-bold tracking-[2px] text-white">
          {t.footer.casesTitle}
        </span>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.caseKoldo}
        </a>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.caseBegona}
        </a>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.caseHidro}
        </a>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.caseDavid}
        </a>
      </div>

      <!-- Info Column -->
      <div class="flex flex-col gap-4">
        <span class="font-secondary text-xs font-bold tracking-[2px] text-white">
          {t.footer.infoTitle}
        </span>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.infoTimeline}
        </a>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.infoAccused}
        </a>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.infoDocs}
        </a>
        <a href="#" class="font-secondary text-sm font-normal text-trama-red-light hover:text-white transition-colors">
          {t.footer.infoSources}
        </a>
      </div>
    </nav>
  </div>

  <!-- Footer Bottom -->
  <div class="relative z-10 flex flex-col sm:flex-row sm:justify-between items-center px-8 md:px-14 pb-8 lg:absolute lg:bottom-8 lg:left-14 lg:right-14">
    <span class="font-secondary text-xs font-medium text-trama-red-light">
      {t.footer.copyright}
    </span>
    <span class="font-secondary text-xs font-medium text-trama-red-light mt-2 sm:mt-0">
      {t.footer.lastUpdate}
    </span>
  </div>
</footer>

---
import ImputadoCardMedium from '../ui/ImputadoCardMedium.astro';

interface Person {
  initials: string;
  name: string;
  role: string;
  badge: string;
  datoLabel: string;
  dato: string;
}

interface Props {
  title: string;
  begona: Person;
  david: Person;
  santos: Person;
}

const { title, begona, david, santos } = Astro.props;
---

<section
  class="bg-trama-950 px-6 py-6 lg:px-14 lg:py-14 w-full"
  data-imputados-section
>
  <!-- Section Header -->
  <div class="flex items-center gap-4 mb-8" data-imputados-section-title>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-trama-red"
    >
      <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
      <circle cx="9" cy="7" r="4"></circle>
      <line x1="17" x2="22" y1="8" y2="13"></line>
      <line x1="22" x2="17" y1="8" y2="13"></line>
    </svg>
    <span class="text-white text-sm font-bold tracking-widest">
      {title}
    </span>
  </div>

  <!-- Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <ImputadoCardMedium
      initials={begona.initials}
      name={begona.name}
      role={begona.role}
      badge={begona.badge}
      badgeType="light"
      datoLabel={begona.datoLabel}
      dato={begona.dato}
      variant="light"
    />
    <ImputadoCardMedium
      initials={david.initials}
      name={david.name}
      role={david.role}
      badge={david.badge}
      badgeType="outline"
      datoLabel={david.datoLabel}
      dato={david.dato}
      variant="dark-alt"
    />
    <ImputadoCardMedium
      initials={santos.initials}
      name={santos.name}
      role={santos.role}
      badge={santos.badge}
      badgeType="light"
      datoLabel={santos.datoLabel}
      dato={santos.dato}
      variant="dark"
    />
  </div>
</section>

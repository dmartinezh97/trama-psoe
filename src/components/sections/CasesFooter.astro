---
interface Link {
  text: string;
  href: string;
}

interface Props {
  title: string;
  links: Link[];
}

const { title, links } = Astro.props;
---

<section class="w-full bg-trama-red" data-cases-footer>
  <div class="max-w-[1440px] mx-auto px-6 md:px-14 py-12 md:py-14 flex flex-col items-center gap-6">
    <span
      class="font-secondary text-sm font-medium text-trama-red-light"
      data-cases-footer-item
    >
      {title}
    </span>
    <div class="flex flex-col md:flex-row gap-3 md:gap-6 w-full md:w-auto" data-cases-footer-item>
      {links.map((link) => (
        <a
          href={link.href}
          class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-white text-white font-secondary text-sm font-bold tracking-[1px] hover:bg-white hover:text-trama-red transition-colors w-full md:w-auto"
        >
          {link.text}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14" />
            <path d="m12 5 7 7-7 7" />
          </svg>
        </a>
      ))}
    </div>
  </div>
</section>

---
interface Props {
  date: string;
  title: string;
  description?: string;
  class?: string;
}

const { date, title, description, class: className = '' } = Astro.props;
---

<div class:list={['w-[220px] px-5 py-6 bg-trama-850 rounded-xl flex flex-col gap-3', className]}>
  <div class="text-[11px] text-trama-400 font-medium uppercase tracking-wide">
    {date}
  </div>
  <h3 class="font-primary text-lg font-semibold text-white">
    {title}
  </h3>
  {description && (
    <p class="text-xs text-trama-400">
      {description}
    </p>
  )}
</div>

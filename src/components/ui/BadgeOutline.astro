---
interface Props {
  text?: string;
  class?: string;
}

const { text = "JUICIO", class: className = "" } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center gap-2 px-4 py-2 border border-trama-200 text-trama-500 font-bold text-[11px] tracking-[1px]",
    className
  ]}
>
  <span>{text}</span>
</span>

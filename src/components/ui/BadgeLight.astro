---
interface Props {
  text?: string;
  class?: string;
}

const { text = "IMPUTADO", class: className = "" } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center gap-2 px-4 py-2 bg-trama-50 text-black font-bold text-[11px] tracking-[1px]",
    className
  ]}
>
  <span>{text}</span>
</span>

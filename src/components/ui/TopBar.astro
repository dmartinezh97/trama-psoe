---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<nav class:list={['h-20 bg-trama-red px-14 flex items-center justify-between', className]}>
  <div class="flex items-center gap-8">
    <a href="/" class="flex items-center gap-3">
      <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center">
        <span class="text-trama-red font-bold text-lg">LT</span>
      </div>
      <span class="text-white font-bold text-sm tracking-wider uppercase">LA TRAMA</span>
    </a>
    <div class="hidden md:flex items-center gap-6">
      <slot name="nav-links">
        <a href="#" class="text-xs font-medium text-white/90 hover:text-white transition-colors uppercase tracking-wide">
          Inicio
        </a>
        <a href="#" class="text-xs font-medium text-white/90 hover:text-white transition-colors uppercase tracking-wide">
          Casos
        </a>
        <a href="#" class="text-xs font-medium text-white/90 hover:text-white transition-colors uppercase tracking-wide">
          Implicados
        </a>
        <a href="#" class="text-xs font-medium text-white/90 hover:text-white transition-colors uppercase tracking-wide">
          Timeline
        </a>
      </slot>
    </div>
  </div>
  <div class="flex items-center gap-4">
    <slot name="nav-actions">
      <button class="p-2 text-white/90 hover:text-white transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
      </button>
      <button class="p-2 text-white/90 hover:text-white transition-colors md:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
      </button>
    </slot>
  </div>
</nav>

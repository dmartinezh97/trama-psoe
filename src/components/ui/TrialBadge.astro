---
interface Props {
  icon?: 'scale' | 'gavel' | 'calendar';
  text: string;
  variant?: 'dark' | 'primary';
  class?: string;
}

const { icon = 'scale', text, variant = 'dark', class: className = '' } = Astro.props;

const variantStyles = {
  dark: 'bg-trama-950 text-white',
  primary: 'bg-trama-red text-white',

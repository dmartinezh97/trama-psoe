---
interface Props {
  placeholder?: string;
  name?: string;
  value?: string;
  class?: string;
}

const {
  placeholder = "Buscar casos, imputados...",
  name = "search",
  value = "",
  class: className = ""
} = Astro.props;
---

<div class:list={["w-80 flex items-center gap-3 px-5 py-4 bg-white border border-trama-200", className]}>
  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#666666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/>
  </svg>
  <input
    type="search"
    name={name}
    value={value}
    placeholder={placeholder}
    class="flex-1 bg-transparent text-[14px] text-black placeholder:text-trama-400 focus:outline-none"
  />
</div>

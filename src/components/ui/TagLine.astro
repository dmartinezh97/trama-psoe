---
interface Props {
  text?: string;
  class?: string;
}

const { text = "ACTUALIZADO ENERO 2026", class: className = "" } = Astro.props;
---

<div
  class:list={[
    "inline-flex items-center gap-4",
    className
  ]}
>
  <span class="w-3 h-3 rounded-full bg-trama-red"></span>
  <span class="text-trama-400 font-semibold text-[12px] tracking-[2px]">{text}</span>
</div>

---
interface Props {
  name: string;
  status: string;
  variant?: 'dark' | 'light';
  class?: string;
}

const { name, status, variant = 'dark', class: className = '' } = Astro.props;

const variantStyles = {
  dark: {
    bg: 'bg-trama-950',
    text: 'text-white',
    badgeBg: status === 'PRISIÓN' || status === 'PRISON' ? 'bg-trama-red' : 'bg-trama-700',
  },
  light: {
    bg: 'bg-trama-50',
    text: 'text-black',
    badgeBg: 'bg-trama-700',
    border: 'border border-trama-200',
  },
};

const styles = variantStyles[variant];
const isPrison = status === 'PRISIÓN' || status === 'PRISON';
---

<div
  class:list={[
    "inline-flex items-center gap-3 px-4 py-3",
    styles.bg,
    styles.text,
    variant === 'light' && styles.border,
    className
  ]}
  data-case-chip
>
  <span class="font-secondary text-sm font-bold">{name}</span>
  <span
    class:list={[
      "inline-flex items-center gap-2 px-3 py-1 text-[11px] font-bold tracking-[1px] text-white",
      isPrison ? 'bg-trama-red' : 'bg-trama-700'
    ]}
  >
    {isPrison && <span class="w-2 h-2 rounded-full bg-white"></span>}
    {status}
  </span>
</div>

---
import LandingLayout from '../../../layouts/LandingLayout.astro';
import LegalContent from '../../../components/sections/LegalContent.astro';
import { translations } from '../../../i18n/translations';

const t = translations.es.legal;
const seo = t.seo.terms;
---

<LandingLayout title={seo.title} description={seo.description}>
  <LegalContent
    title={t.terms.title}
    sections={t.terms.sections}
    backLink="/es"
    backText={t.backToHome}
    lastUpdated={t.lastUpdated}
  />
</LandingLayout>
